# Feeds directory
Options -Indexes
RewriteEngine On

# Always route the clean URL to the PHP generator in THIS folder
RewriteRule ^products\.ndjson$ products.ndjson.php [L]

# Correct MIME for safety (even if PHP headers fail)
AddType application/x-ndjson .ndjson

# Caching headers (short)
<Files "products.ndjson">
  Header set Cache-Control "public, max-age=300"
</Files>

