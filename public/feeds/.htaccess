# BEGIN HoosierCladding-Feeds
Options -Indexes

# Serve /feeds/products.ndjson from PHP generator with clean URL
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/feeds/products\.ndjson$
RewriteRule ^products\.ndjson$ products.ndjson.php [L]

# Ensure correct content-type even if PHP fails
AddType application/x-ndjson .ndjson

# Caching: short CDN cache + validators
<Files "products.ndjson">
  Header set Cache-Control "public, max-age=300"
</Files>

# Allow HEAD preflight checks from bots/tools
<IfModule mod_headers.c>
  Header always set Access-Control-Allow-Origin "*"
  Header always set Access-Control-Allow-Methods "GET,HEAD,OPTIONS"
</IfModule>
# END HoosierCladding-Feeds

